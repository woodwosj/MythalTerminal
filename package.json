{
  "name": "mythalterminal",
  "version": "1.0.0",
  "description": "AI-centric terminal for coding with Claude Code",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:main\" \"npm run dev:renderer\" \"npm run electron:dev\"",
    "dev:main": "NODE_ENV=development tsc -p tsconfig.main.json --watch",
    "dev:renderer": "NODE_ENV=development vite --config vite.config.mjs",
    "electron:dev": "wait-on http://localhost:3000 && NODE_ENV=development electron . --dev --no-sandbox",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.config.mjs",
    "start": "electron . --no-sandbox",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "./tests/e2e/run-visual-tests.sh",
    "test:terminal": "playwright test tests/e2e/terminal-core.spec.ts --project=electron",
    "test:claude": "playwright test tests/e2e/claude-integration.spec.ts --project=electron",
    "test:context": "playwright test tests/e2e/context-layers.spec.ts --project=electron",
    "test:commands": "playwright test tests/e2e/special-commands.spec.ts --project=electron",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "terminal",
    "claude",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.6",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.0.0",
    "electron-mock-ipc": "^0.3.12",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.54.2",
    "postcss": "^8.4.47",
    "ts-jest": "^29.1.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "better-sqlite3": "^11.3.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "electron-store": "^8.2.0",
    "gpt-tokenizer": "^3.0.1",
    "lodash": "^4.17.21",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^5.0.0"
  },
  "build": {
    "appId": "com.mythalterminal.app",
    "productName": "MythalTerminal",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  }
}
